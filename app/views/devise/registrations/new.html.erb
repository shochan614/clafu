<%= render "shared/second_header" %>
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
    <%= f.number_field :class_room_id, class:"class-room-id", id:"class-room-id", placeholder:"クラスID" , min: 1 %>
    <%= f.email_field :email, class:"email", id:"email", autofocus: true %>
    <%= f.text_field :first_name, class:"first-name", id:"first-name", placeholder:"上の名前" %>
    <%= f.text_field :last_name, class:"last-text", id:"last-name", placeholder:"下の名前" %>
    <%= f.text_field :nickname, class:"nickname", id:"nickname", placeholder:"ニックネーム" %>
    <%= f.number_field :attendance_number, class:"attendance-number", id:"attendance-number", placeholder:"出席番号" , min: 1, max: 45 %>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力してください" %>
    <%= f.submit "登録する", class:"reg-btn" %>
  <% end %>
<%= link_to 'もどる', root_path, class:"back-btn" %>