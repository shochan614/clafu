<%= render "shared/header" %>
<main>
  <%= form_with model: @class_room, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
      <div class="class-room-reg">
        <%= f.collection_select(:school_id, @schools, :id, :name, {prompt: "学校を選択してください"}, {class: "school-name", id: "school-name"}) %>
          <div class="class-g-n">
            <%= f.number_field :grade, class:"grade", id:"grade", placeholder:"学年" , min: 1, max: 7 %>
            <%= f.number_field :class_number, class:"class-number", id:"class-number", placeholder:"組", min: 1, max: 10 %>
          </div>
        <%= f.text_field :class_goals, class:"class-goals", id:"class-goals", placeholder:"学級目標", maxlength:"40" %>
        <%= f.submit "登録する", class:"reg-btn" %>
      </div>
  <% end %>
  <%= link_to 'もどる', :back, class:"back-btn" %>
</main>